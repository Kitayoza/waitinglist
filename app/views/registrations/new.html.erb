      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      font-family: inherit;
    }

    .registration-panel .form-control.is-invalid {
      border-color: #dc3545;
    }

    .invalid-feedback {
      color: #dc3545;
      font-size: 14px;
      margin-top: 5px;
    }

    .text-muted {
      color: #6c757d;
      font-size: 13px;
    }

    .btn {
      display: inline-block;
      background: #0097b2;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      font-family: inherit;
      font-size: 16px;
      transition: background 0.3s;
    }

    .btn:hover {
