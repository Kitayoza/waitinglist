      margin-bottom: 5px;
      font-weight: 600;
      color: #555;
    }

    .auth-panel input[type="text"],
    .auth-panel input[type="password"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      font-family: inherit;
    }

    .checkbox-field {
      margin: 15px 0;
      display: flex;
      align-items: center;
    }

    .checkbox-field input {
      margin-right: 10px;
    }

    .btn {
      display: inline-block;
      background: #0097b2;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      font-family: inherit;
      font-size: 16px;
      transition: background 0.3s;
    }

    .btn:hover {
