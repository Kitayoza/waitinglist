</div>

  <script>
   const specialtyCards = document.querySelectorAll('.specialty-card');
    const doctorLists = document.querySelectorAll('.doctors-list');
    const tabs = document.querySelectorAll('#nav-tabs li');
    const contents = document.querySelectorAll('.tab-content');
    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            contents.forEach(c => c.classList.remove('active'));

            tab.classList.add('active');
            const target = document.getElementById(tab.getAttribute('data-tab'));
            target.classList.add('active');
        });
    });
    specialtyCards.forEach(card => {
      card.addEventListener('click', () => {
        // 1. –£–±–∏—Ä–∞–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Å–æ –≤—Å–µ—Ö –∫–∞—Ä—Ç–æ—á–µ–∫
        specialtyCards.forEach(c => c.classList.remove('selected'));
        // 2. –î–æ–±–∞–≤–ª—è–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Ç–µ–∫—É—â–µ–π
        card.classList.add('selected');
  
        // 3. –ü–æ–ª—É—á–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—É—é —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ—Å—Ç—å
        const selectedSpecialty = card.dataset.specialty;
  
        // 4. –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç–æ–ª—å–∫–æ –≤—Ä–∞—á–µ–π –≤—ã–±—Ä–∞–Ω–Ω–æ–π —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ—Å—Ç–∏
        doctorLists.forEach(list => {
          list.style.display = list.dataset.doctors === selectedSpecialty ? 'block' : 'none';
        });
      });
    });
    function toggleSchedule(card) {
      const schedule = card.querySelector('.schedule-box');
      const allSchedules = document.querySelectorAll('.schedule-box');
      allSchedules.forEach(s => {
       if (s !== schedule) s.style.display = 'none';
      });
      schedule.style.display = (schedule.style.display === 'none') ? 'block' : 'none';
    }
    function login() {
      const login = document.querySelector('input[type="text"]').value;
      const password = document.querySelector('input[type="password"]').value;

    // –ü—Ä–æ—Å—Ç–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –Ω–µ–ø—É—Å—Ç–æ–π –≤–≤–æ–¥ (–º–æ–∂–Ω–æ –∑–∞–º–µ–Ω–∏—Ç—å –Ω–∞ –Ω–∞—Å—Ç–æ—è—â—É—é –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—é)
      if (login.trim() && password.trim()) {
        document.querySelector('.login-panel').style.display = 'none';
        document.querySelector('.user-panel').style.display = 'block';
        document.getElementById('user-name').textContent = login;
      } else {
        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –ª–æ–≥–∏–Ω –∏ –ø–∞—Ä–æ–ª—å');
      }
      localStorage.setItem('loggedin', 'true');
      showScreen('dashboard-screen');
  }

    function logout() {
      document.querySelector('.user-panel').style.display = 'none';
      document.querySelector('.login-panel').style.display = 'block';
      localStorage.removeItem('loggedin');
      showScreen('login-screen');
    }

  let currentWeekOffset = 0;


  function updateScheduleHeaders() {
    const headers = document.querySelectorAll('.schedule-table .schedule-dates-row');

    headers.forEach(tr => {
      tr.innerHTML = ''; // –æ—á–∏—â–∞–µ–º
      const start = new Date();
      start.setDate(start.getDate() + currentWeekOffset * 7);

      for (let i = 0; i < 7; i++) {
        const day = new Date(start);
        day.setDate(start.getDate() + i);
        const dayName = ['–ø–Ω','–≤—Ç','—Å—Ä','—á—Ç','–ø—Ç','—Å–±','–≤—Å'][day.getDay() === 0 ? 6 : day.getDay() - 1];
        const formatted = day.toLocaleDateString('ru-RU');
        const th = document.createElement('th');
        th.innerHTML = `${dayName}<br>${formatted}`;
        tr.appendChild(th);
      }
    });

  function getStartOfCurrentWeek() {
    const today = new Date();

  // –ü–æ–ª—É—á–∞–µ–º –Ω–æ–º–µ—Ä –¥–Ω—è –Ω–µ–¥–µ–ª–∏ (0 ‚Äî –≤–æ—Å–∫—Ä–µ—Å–µ–Ω—å–µ, 1 ‚Äî –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫, ..., 6 ‚Äî —Å—É–±–±–æ—Ç–∞)
    const day = today.getDay();

  // –°–º–µ—â–µ–Ω–∏–µ –¥–æ –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫–∞
    const diff = (day === 0 ? -6 : 1 - day);

  // –ù–∞—Ö–æ–¥–∏–º –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫ —Ç–µ–∫—É—â–µ–π –Ω–µ–¥–µ–ª–∏
    const monday = new Date(today);
    monday.setDate(today.getDate() + diff);
    monday.setHours(0, 0, 0, 0);

    return monday;
  }

  function getStartDate() {
    const start = getStartOfCurrentWeek();
    start.setDate(start.getDate() + currentWeekOffset * 7);
    return start;
  }
  const startDate = new Date(getStartDate()); // –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫

  function renderSchedule(doctorName, price, tableElement) {
    const daysOfWeek = ['–ø–Ω', '–≤—Ç', '—Å—Ä', '—á—Ç', '–ø—Ç', '—Å–±', '–≤—Å'];
    const headerRow = tableElement.querySelector('.schedule-dates-row');
    const bodyRow = tableElement.querySelector('.schedule-days-row');

    headerRow.innerHTML = '';
    bodyRow.innerHTML = '';

    for (let i = 0; i < 7; i++) {
      const date = new Date(startDate);
      date.setDate(startDate.getDate() + i);
      const formattedDate = date.toLocaleDateString('ru-RU');

      // –ó–∞–≥–æ–ª–æ–≤–∫–∏ –¥–Ω–µ–π
      const th = document.createElement('th');
      th.innerHTML = `${daysOfWeek[i]}<br>${formattedDate}`;
      headerRow.appendChild(th);

      // –ö–ª–∏–∫–∞–±–µ–ª—å–Ω—ã–µ —è—á–µ–π–∫–∏
      const td = document.createElement('td');
      td.textContent = '–í—ã–±—Ä–∞—Ç—å';
      td.className = 'selectable-date';
      td.style.cursor = 'pointer';
      td.style.textAlign = 'center';
      td.style.backgroundColor = '#e0f7fa';
      td.onclick = () => {
        const url = `confirm.html?doctor=${encodeURIComponent(doctorName)}&date=${encodeURIComponent(formattedDate)}&price=${encodeURIComponent(price)}`;
        window.location.href = url;
      };
      bodyRow.appendChild(td);
    }
  }

  document.querySelectorAll('.doctor-card').forEach(card => {
    const name = card.querySelector('.doctor-details strong').textContent.trim();
    const priceText = card.querySelector('.price').textContent.trim();
    const price = priceText.replace(/[^\d]/g, ''); 
    const table = card.querySelector('.schedule-table');
    if (table) {
      renderSchedule(name, price, table);
    }
  });
  }
  window.addEventListener('DOMContentLoaded', updateScheduleHeaders);
  window.addEventListener('DOMContentLoaded', () => {
    const loggedIn = localStorage.getItem('loggedin');
    if (loggedIn === 'true') {
      showScreen('dashboard-screen');
    } else {
      showScreen('login-screen');
    }
  });
  </script>
  
